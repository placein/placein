{
    "global": {
        "assetsDir" : "public/assets"
    },

    "sass": {
        "input"      : "resources/scss/",
        "output"     : "public/assets/css/",
        "linter"     : "build/scss-lint.yml",
        "lintReport" : "build/reports/scss-lint-report.json",
        "log"        : false,
        "sourcemaps" : true,
        "styleStats" : "build/reports/css-style-stats",
        "support"    : ["last 2 versions", "> 1%"]
    },

    "js": {
        "input"      : "resources/js/",
        "output"     : "public/assets/js/",
        "jshintFail" : false
    },

    "img": {
        "input"  : "resources/img/",
        "output" : "public/assets/img/"
    },

    "todo": {
        "input"  : "resources/",
        "output" : "build/reports/"
    },

    "release" : {
        "defaultMessage" : "General release",
        "defaultType"    : "patch"
    },

    "messages": {
        "sass"   : "Sass tasks finished",
        "js"     : "Javascript tasks finished",
        "img"    : "Images optimized",
        "watch"  : "File changed",
        "commit" : "Commited to Github"
    }
}
